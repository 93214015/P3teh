<UserControl x:Class="WPF.NETCore.UserControls.UCCameraPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.NETCore.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <Grid>
            <Button x:Name="BtnTest" Width="50" Height="50" HorizontalAlignment="Right" VerticalAlignment="Top" Click="BtnTest_Click"/>
            <WrapPanel x:Name="StackPanelCameraController" Orientation="Horizontal"/>
        </Grid>
    </ScrollViewer>
</UserControl>
